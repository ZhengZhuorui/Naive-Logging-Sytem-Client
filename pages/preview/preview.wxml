<view class="page">
    <view class="page__hd">
        <view class="page__title">提交预览</view>
    </view>
    <view class="page__bd">
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">组织名称</view>
                    <view class="weui-form-preview__value_in-hd">{{organization}}</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动主题</view>
                    <view class="weui-form-preview__value">{{theme}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动日期</view>
                    <view class="weui-form-preview__value">{{date}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动时间</view>
                    <view class="weui-form-preview__value">{{time}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">参与人数</view>
                    <view class="weui-form-preview__value">{{joinNumber}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">地点</view>
                    <view class="weui-form-preview__value">{{location}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动内容</view>
                    <view class="weui-form-preview__value">{{content}}</view>
                </view>
            </view>
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">提交人姓名</view>
                    <view class="weui-form-preview__value_in-hd">{{name}}</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">感受</view>
                    <view class="weui-form-preview__value">{{feeling}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">背景介绍</view>
                    <view class="weui-form-preview__value">{{other}}</view>
                </view>
            </view>
            <view class="weui-form-preview__ft">
                <navigator  class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap='switchBack'>返回</navigator>
            </view>
        </view>
    </view>
</view>