<!--pages/mutualcomment/mutualcomment.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title" style="font-size:25px">请选择您要点评的项目：</view>
    </view>
    <view class="page__bd">
        <view class="icon-box">
            <icon bindtap="switchToMutualcomment_begin" type="success" size="61"></icon>
            <view class="icon-box__ctn">
                <view class="icon-box__title">立项评估</view>
                <view class="icon-box__desc"></view>
            </view>
        </view>
        
        <view class="icon-box">
            <icon bindtap="switchToMutualcomment_middle" type="waiting" size="61"></icon>
            <view class="icon-box__ctn">
                <view class="icon-box__title">过程评估</view>
                <view class="icon-box__desc"></view>
            </view>
        </view>

        <view class="icon-box">
            <icon bindtap="switchToNot_existed" type="info" size="61" color="orange"></icon>
            <view class="icon-box__ctn">            
              <view class="icon-box__title">结题评估</view>
                <view class="icon-box__desc"></view>
            </view>
        </view>
        
    </view>
</view>
