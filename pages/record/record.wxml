<!--pages/record/record.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title" style="font-size:25px">社区营造记录表</view>
    </view>
    <view class="page__bd">
        <view class="icon-box">
            <icon bindtap="switchToResidence" type="success" size="61"></icon>
            <view class="icon-box__ctn">
                <view class="icon-box__title">居民</view>
                <view class="icon-box__desc">去分享自己的活动吧！</view>
            </view>
        </view>
        
        <view class="icon-box">
            <icon bindtap="switchToWorker" type="waiting" size="61"></icon>
            <view class="icon-box__ctn">
                <view class="icon-box__title">工作人员</view>
                <view class="icon-box__desc">记录工作的每一天</view>
            </view>
        </view>
    </view>
</view>